{
  extends: "eslint:recommended",
  parser: "babel-eslint",
  env: {
    node: true,
    mocha: true,
    browser: true,
    es6: true,
  },
  ecmaFeatures: {
    modules: true,
  },
  rules: {
    "comma-dangle": [2, "always-multiline"],
    "no-undef": [2],
    "quotes": [2, "single"],
    "strict": [2, "never"],
    semi: ["error", "always"],
    "indent": [2, 2],
    "no-mixed-spaces-and-tabs": 2,
  },
  plugins: ['flowtype', 'import'],
}
